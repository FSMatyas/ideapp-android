<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            style="@style/AppTextStyle.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="My Ideas &amp; Apps"
            android:textColor="@color/primary_color" />

        <TextView
            style="@style/AppTextStyle.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Track your submitted ideas and download completed apps"
            android:textColor="@color/text_secondary" />

        <!-- My Submitted Ideas Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTextStyle.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Submitted Ideas" />

            <TextView
                style="@style/AppTextStyle.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 total"
                android:textColor="@color/primary_color" />

        </LinearLayout>

        <!-- Sample My Ideas -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTextStyle.Body"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Personal Recipe Organizer"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status_badge_development"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="In Development"
                        android:textColor="@color/text_white"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    style="@style/AppTextStyle.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Submitted 1 week ago â€¢ In development for 3 days" />

                <TextView
                    style="@style/AppTextStyle.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I need an app to organize my family recipes with photos, ingredients list, and cooking time." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTextStyle.Caption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Est. completion: 3-5 days"
                        android:textColor="@color/status_development" />

                    <TextView
                        style="@style/AppTextStyle.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 comments" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/AppCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTextStyle.Body"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quick Daily Journal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status_badge_new"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="New"
                        android:textColor="@color/text_white"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    style="@style/AppTextStyle.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Submitted 2 days ago â€¢ Waiting for review" />

                <TextView
                    style="@style/AppTextStyle.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A simple journal app where I can quickly write daily thoughts with mood tracking." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTextStyle.Caption"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Waiting for development start"
                        android:textColor="@color/status_new" />

                    <TextView
                        style="@style/AppTextStyle.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 comment" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- My Completed Apps Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTextStyle.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Completed Apps" />

            <TextView
                style="@style/AppTextStyle.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 ready"
                android:textColor="@color/status_completed" />

        </LinearLayout>

        <!-- Sample Completed App -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/AppTextStyle.Body"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Simple Password Generator"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/status_badge_completed"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="Completed"
                        android:textColor="@color/text_white"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    style="@style/AppTextStyle.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Completed 2 weeks ago â€¢ Your personal copy" />

                <TextView
                    style="@style/AppTextStyle.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Generate secure passwords with customizable length and character sets." />

                <com.google.android.material.button.MaterialButton
                    style="@style/AppButtonStyle.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Download My Free Copy"
                    app:icon="@drawable/ic_download" />

                <TextView
                    style="@style/AppTextStyle.Caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Also available in Play Store â€¢ 47 people bought this app"
                    android:textAlignment="center"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Empty State for when no apps -->
        <com.google.android.material.card.MaterialCardView
            style="@style/AppCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alpha="0.7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸ’¡"
                    android:textSize="48sp" />

                <TextView
                    style="@style/AppTextStyle.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Have more app ideas?"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    style="@style/AppTextStyle.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit more ideas from the Home tab to get more custom apps built for you!"
                    android:textAlignment="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
