<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            style="@style/AppTextStyle.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Browse by Category"
            android:textColor="@color/primary_color" />

        <TextView
            style="@style/AppTextStyle.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Explore ideas by different problem areas"
            android:textColor="@color/text_secondary" />

        <!-- Categories Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="📱"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Productivity"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="👨‍👩‍👧‍👦"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Family"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="💼"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Business"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="🎮"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Entertainment"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="💰"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Finance"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="🏥"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Health"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="🎓"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Education"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="🔧"
                            android:textSize="32sp" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Utilities"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/AppTextStyle.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11 ideas"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
