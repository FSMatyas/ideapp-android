<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="13dp">

        <!-- Header -->
        <TextView
            style="@style/AppTextStyle.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/browse_by_category"
            android:textColor="@color/primary_color"
            android:maxLines="2"
            />

        <TextView
            style="@style/AppTextStyle.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:text="@string/explore_ideas_by_area"
            android:textColor="@color/text_secondary"
            android:maxLines="3"
            />

        <!-- Categories Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/phone_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_productivity"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/family_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_family"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/business_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_business"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/entertainment_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_entertainment"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/finance_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_finance"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/health_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_health"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/education_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_education"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/AppCardStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="112dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="13dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="@string/utilities_emoji"
                            android:textSize="26sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            style="@style/AppTextStyle.Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:text="@string/category_utilities"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:maxLines="2"
                            android:ellipsize="end" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
